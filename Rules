#!/usr/bin/env ruby

preprocess do
  hide_items_from_sitemap
end

compile '/**/*.html' do
  layout '/default.*'
  filter :erb
end

compile '/**/*.md' do
  filter :kramdown
  layout '/default.*'
end

compile '/sitemap.xml' do
  filter :erb
end

compile '/htaccess.txt' do
  filter :erb
end

compile '/**/*' do
end

route '/**/*.{html,md}' do
  # homepage
  if item.identifier =~ '/index.*'
    '/index.html'
  # error page
  elsif item.identifier =~ '/404.html'
    '/404.html'
  # every other page
  else
    item.identifier.without_ext + '/index.html'
  end
end

# renames the file
route '/htaccess.txt' do
  '/.htaccess'
end

route '/**/*' do
  item.identifier.to_s
end

layout '/**/*', :erb
